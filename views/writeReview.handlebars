            <input type="email" class="form-control" id="user_emailId" name="user_emailId" placeholder="Email"> 
          </div>
          <div class="col">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Name">
          </div>
          <div class="col">
            <label for="name">Rating (1-5)</label>
            <input type="number" class="form-control" id="stars" name="stars" placeholder="Rating (1-5)" maxSize="1">
