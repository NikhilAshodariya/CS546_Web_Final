
<br>
<h1 class="writeReview centered">{{title}}</h1>
<br>

<form action="/writeReview" method="POST" class="new-review-form" id="review-form">
  <div class="card text-center">
    <div class="card-header">
      Write a Review
    </div>
    <div class="card-body">
      <div class="form-row">
        <div class="col">
          <label for="user_emailId">Email</label>
          <input type="email" class="form-control" id="user_emailId" name="user_emailId" placeholder="Email" required>
        </div>
        <div class="col">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
        </div>
        <div class="col">
          <label for="name">Rating (1-5)</label>
          <input type="number" class="form-control" id="stars" name="stars" placeholder="Rating (1-5)" 
            min="1" max="5" required>
        </div>
      </div>
      <br>
      <label for="comment">Comments</label>
      <textarea class="form-control" id="comment" name="comment" rows="3" required></textarea>
      <p class="error">
        <a href="/signup"> {{errorfound}}</a>
              
      </p>
      <p class="error">
        {{emptyerror}}
      </p>


      <button type="submit" class="button5 btn btn-dark">Submit Review</button>
  
    </div>
  </div>
  
